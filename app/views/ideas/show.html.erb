<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @idea.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @idea.description %>
</p>

<div>
  <strong>Tags:</strong>
  <% @idea.tags.each do |t| %>
    <p>
      <%= t.name %>
    </p>
  <% end %>
</div>

<p>
  <strong>Picture:</strong>
  <%= image_tag(@idea.picture.url(:large)) if @idea.picture.present? %>
  <!--
  <%= image_tag(@idea.picture_url, :width => 300) if @idea.picture.present? %>
-->
</p>

<p>
  <strong>Mark:</strong>
  <%= @idea.ratings.average(:mark) %>
</p>
<a href="/ideas/edit">Edit</a>
<%= link_to 'Edit', edit_idea_path(@idea), :class => "btn btn-default" %> |
<%= link_to 'Back', ideas_path %>

<%= render 'ratings/rating_form' %>
